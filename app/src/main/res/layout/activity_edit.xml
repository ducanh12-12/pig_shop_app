<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".Edit">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/aldrich"
        android:text="Thay đổi thông tin"
        android:textSize="33sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_editname"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/name_icon"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Họ và tên"
        android:inputType="textPersonName"
        android:paddingLeft="12dp"
        android:paddingTop="9dp"
        android:paddingRight="20dp"
        android:paddingBottom="9dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/edt_editdate"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/date_icon"
        android:drawableRight="@drawable/date_choose_icon"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Ngày sinh"
        android:inputType="date"
        android:paddingLeft="12dp"
        android:paddingTop="9dp"
        android:paddingRight="10dp"
        android:paddingBottom="9dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/edt_editname"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_editname"
        app:layout_constraintTop_toBottomOf="@+id/edt_editname" />

    <EditText
        android:id="@+id/edt_editphone"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/phone_icon"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Số điện thoai"
        android:inputType="number"
        android:paddingLeft="12dp"
        android:paddingTop="9dp"
        android:paddingRight="20dp"
        android:paddingBottom="9dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/edt_editdate"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_editdate"
        app:layout_constraintTop_toBottomOf="@+id/edt_editdate" />

    <EditText
        android:id="@+id/edt_editemail"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/mail_icon"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="12dp"
        android:paddingTop="9dp"
        android:paddingRight="20dp"
        android:paddingBottom="9dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/edt_editphone"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_editphone"
        app:layout_constraintTop_toBottomOf="@+id/edt_editphone" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/edt_editemail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_editemail"
        app:layout_constraintTop_toBottomOf="@+id/edt_editemail">

        <EditText
            android:id="@+id/edt_editpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_bg"
            android:drawableLeft="@drawable/pass_icon"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:paddingLeft="12dp"
            android:paddingTop="9dp"
            android:paddingRight="20dp"
            android:paddingBottom="9dp"
            android:text="" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/input_bg"
            android:text="Lưu lại"
            android:textSize="20sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>