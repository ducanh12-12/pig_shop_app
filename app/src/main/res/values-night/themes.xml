<resources xmlns:tools="http://schemas.android.com/tools">
    <!--     Base application theme. -->
    <style name="Theme.RelaytiveLayout" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!--         Primary brand color. -->
        <item name="colorPrimary">@color/Purple</item>
        <item name="colorPrimaryVariant">@color/PurpleVariant</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink</item>
        <item name="colorSecondaryVariant">@color/pink</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/MyActionBarDarkStyle</item>
    </style>

    <style name="MyActionBarDarkStyle" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">@color/pink</item>
    </style>
</resources>